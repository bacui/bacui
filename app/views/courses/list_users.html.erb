<h1>Participants in Course "<%=@course.title %>"</h1>

<%= form_tag :controller => 'courses', :action => 'add_user', :method => 'post' do %>
  <%= hidden_field_tag 'id', @course.id %>
  Enter a user's registered Email: <%= text_field :user, :email, {:size => 20, :class => "form-control", :style => "width: 250px"} %>
  <input type='submit' value='Add' class="btn btn-sm btn-secondary"/>
<% end %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.first_name %>, <%=user.last_name %></td>
        <td><%=user.email %></td>
      </tr>
    <% end %>
  <tbody>

  <%#= form_tag "add_user", :id => "part_add", :method => 'post', :class => "form-inline", :remote => true do %>
<!--    Enter a user's registered Email: <%#= text_field :user, :email, {:size => 20, :class => "form-control", :style => "width: 250px"} %>-->
    <%#= hidden_field_tag "id", @course.id%>
<!--    <input id='add' type='submit' value='Add' class="btn btn-md btn-default" />-->
  <%# end %>
</table>




