<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field input-group">
    <div class= "input-group-prepend">
      <span class = "input-group-text" >Email &nbsp; &nbsp; &nbsp; &nbsp;</span>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>'form-control' %>
  </div>

  <div class="field input-group">
    <div class= "input-group-prepend">
      <span class = "input-group-text" >First Name</span>
    </div>
    <%= f.text_field :first_name, :class => 'form-control' %>
  </div>

  <div class="field input-group">
    <div class= "input-group-prepend">
      <span class = "input-group-text" >Last Name</span>
    </div>
    <%= f.text_field :last_name, :class => 'form-control' %>
  </div>

  <div class="field input-group">
    <div class= "input-group-prepend">
      <span class = "input-group-text" for = "user_role" >Role &nbsp; &nbsp; &nbsp;  &nbsp; &nbsp;</span>
    </div>
    <%= f.select :role, options_for_select(['student', 'instructor_pending'], 'student'),{}, { :class => 'custom-select' } %>
  </div>

  <div class = "field input-group">
    <div class = "input-group-prepend">
      <span class = "input-group-text" >Password &nbsp;</span>
    </div>
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
  </div>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>


  <div class="field input-group">
    <div class= "input-group-prepend">
      <span class = "input-group-text" >Password &nbsp;</span>
    </div>
    <%= f.password_field :password_confirmation, placeholder: 'Same as Above', autocomplete: "off", :class => 'form-control' %>
  </div>

  <div class="actions">
    <div>
      <%= f.submit "Sign up", :class => 'btn btn-info' %>
    </div> <br />
  </div>
<% end %>

<%= render "devise/shared/links" %>
